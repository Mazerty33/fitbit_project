<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Fitbit</title>
    <link href="http://www.cssscript.com/wp-includes/css/sticky.css" rel="stylesheet" type="text/css"/>
    {% block stylesheets %}
    {% stylesheets filter='cssrewrite'
    'bundles/fitbitfitapp/css/circle.css'
    'bundles/fitbitfitapp/css/main.css'
    %}

    <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />

    {% endstylesheets %}
    {% endblock stylesheets %}
</head>
<body>
<div id="userBanner" class="top">
{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
    <span class="banner">Logged in as {{ app.user.username }}
    <a href="{{ path('fos_user_security_logout') }}">Logout</a></span>
{% else %}
    <a href="{{ path('fos_user_security_login') }}">Login</a>
{% endif %}
</div>
{% for type, messages in app.session.flashBag.all %}
    {% for message in messages %}
        <div class="{{ type }}">
            {{ message|trans({}, 'FOSUserBundle') }}
        </div>
    {% endfor %}
{% endfor %}

{% block body %}
{% endblock %}

<div id="viewSwitch" class="bottom">
    <span class="halfBanner"><a href="{{ path('fitbit_fitapp_homepage') }}">Dashboard</a></span><span class="halfBanner"><a href="{{ path('fitbit_fitapp_objectives') }}">Objectives</a></span>
</div>



{% block javascript %}
{% endblock %}

</body>
</html>